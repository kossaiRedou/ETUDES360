# Configuration Etudes360 - Variables d'environnement
# Copiez ce fichier vers .env et remplissez les valeurs

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,.ngrok.io,.ngrok-free.app

# Base de données
DATABASE_URL=sqlite:///db.sqlite3

# Langue et fuseau horaire
LANGUAGE_CODE=fr-fr
TIME_ZONE=Africa/Conakry

# Ngrok Configuration (optionnel)
NGROK_AUTHTOKEN=your-ngrok-token-here

# Email Configuration (pour production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Clés API externes (si nécessaire)
GOOGLE_API_KEY=your-google-api-key
FACEBOOK_APP_ID=your-facebook-app-id

# Mode de déploiement
ENVIRONMENT=development